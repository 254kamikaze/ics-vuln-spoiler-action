{
  "name": "vulnerability-spoiler-alert-action",
  "version": "1.0.0",
  "description": "GitHub Action to monitor repositories for security vulnerability patches using Claude AI",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "typecheck": "tsc --noEmit",
    "dev": "tsx src/index.ts",
    "test": "vitest run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spaceraccoon/vulnerability-spoiler-alert-action.git"
  },
  "keywords": [
    "github-action",
    "security",
    "vulnerability",
    "claude",
    "ai",
    "monitoring"
  ],
  "author": "Eugene Lim",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@anthropic-ai/sdk": "^0.39.0",
    "@octokit/rest": "^21.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vercel/ncc": "^0.38.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  }
}
